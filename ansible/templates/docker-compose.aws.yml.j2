version: '3.8'

services:
  app:
    image: {{ ecr_repository_uri }}:{{ image_tag }}
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV=production
      - REDIS_HOST={{ redis_endpoint }}
      - REDIS_PORT=6379
    volumes:
      - ./output:/app/output
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000"]
      interval: 30s
      timeout: 10s
      retries: 3